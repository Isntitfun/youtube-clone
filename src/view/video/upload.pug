extends ../base


block content 
    h1.banner Upload Video

    div.recorder-section
        video#video-display 
        button#recorder-btn
            i.fas.fa-video
    form(method="POST" enctype="multipart/form-data").general-form
        label(for="video") Video
        input(name="video" id="video" type="file" placeholder="Video" accept="video/*" required)
        label(for="thumbnail") Thumbnail
        input(name="thumbnail" id="thumbnail" type="file" placeholder="Thumbnail" accept="image/*" required)
        input(name="title" type="text" placeholder="Video title" required)
        input(name="description" type="text" placeholder="Description" required)
        input(name="hashtags" type="text" placeholder="#" required)
        input(type="submit" value="Upload") 
block scripts 
    script(src="/sss/js/recorder.js") 