mixin listVideo(video)

            a(href=`/video/${video._id}`).video-anchor
                div(style=`background-image: url(${video.thumbnailFile}); background-size: cover; background-position: center`).video-thumb 
                div.video-data 
                    span.video-title #{video.title}
                    span.video-owner #{video.owner.name}
                    div.video-meta 
                        span #{video.meta.views} #{video.meta.views === 1 ? "view" : "views"} â€¢ 
                        span #{video.createdAt.toLocaleDateString('ko-KR')}
                hr


